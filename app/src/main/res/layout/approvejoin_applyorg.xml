<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#bee6c9"
             >

        <Button
            android:id="@+id/constact_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未审核"
            style="@style/top_group"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/constact_all"
            android:layout_toStartOf="@+id/constact_all" />

        <Button
            android:id="@+id/constact_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已审核"
            style="@style/top_all"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="97dp"
            />

    </RelativeLayout>

            <ListView
                android:id="@+id/approveList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

</LinearLayout>