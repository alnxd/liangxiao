<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/app_logo"
        android:layout_gravity="left"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/name"
        android:text="姓名啊"
        android:textSize="16sp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/photo_image"
        android:typeface="serif" />

    <TextView
        android:id="@+id/college"
        android:text="计算机学院"
        android:textSize="16sp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name" />

    <TextView
        android:id="@+id/grade"
        android:text="年级"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#050000"
        android:typeface="serif"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/college"
        android:layout_toRightOf="@+id/college"
        android:layout_toEndOf="@+id/college" />

    <TextView
        android:id="@+id/sex"
        android:text="男"
        android:textSize="16sp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/grade"
        android:layout_toRightOf="@+id/grade"
        android:layout_toEndOf="@+id/grade" />

    <TextView
        android:id="@+id/title"
        android:text="职务"
        android:textSize="16sp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/sex"
        android:layout_toRightOf="@+id/sex"
        android:layout_toEndOf="@+id/sex" />

</RelativeLayout>