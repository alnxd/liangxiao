<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/broadcast_title"
        android:text="篮球社团"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#050000"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:id="@+id/author"
        android:textSize="15sp"
        android:text="王宁老师"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/broadcast_title"
        android:layout_alignLeft="@+id/content"
        android:layout_alignStart="@+id/content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100位成员\n大苏打as打扫打扫打扫大as打扫打扫打扫打扫的"
        android:id="@+id/content"
        android:textColor="#0a1b42"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/broadcast_title"
        android:layout_alignStart="@+id/broadcast_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016.10.11"
        android:id="@+id/timestamp"

        android:textSize="15sp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_below="@+id/broadcast_title"
        android:layout_toRightOf="@+id/broadcast_title"
        android:layout_toEndOf="@+id/broadcast_title" />
    <ImageView
        android:background="#f2efef"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/author"
        android:id="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>