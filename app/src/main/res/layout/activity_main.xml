<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="#33cbcc"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">
    <ImageView
        android:id="@+id/xiaohui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="6dp"
        android:layout_marginTop="24dp"
       android:layout_marginBottom="32dp"
        android:src="@drawable/app_logo" />

    <RelativeLayout
        android:layout_width="339dp"
        android:layout_height="114dp"      >

        <ImageView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:src="@drawable/account" />

        <EditText
            android:id="@+id/m_eStudentId"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/account"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/account"
            android:layout_toRightOf="@+id/account"
            android:background="@null"
            android:hint="请输入学号"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="@android:color/white" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignEnd="@+id/m_eStudentId"
            android:layout_alignRight="@+id/m_eStudentId"
            android:layout_below="@+id/m_eStudentId"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"
            android:background="#e8e8e8" />

        <ImageView
            android:id="@+id/passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/m_eStudentId"
            android:layout_toStartOf="@+id/m_eStudentId"
            android:src="@drawable/passwd" />

        <EditText
            android:id="@+id/m_ePasswd"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignLeft="@+id/m_eStudentId"
            android:layout_alignStart="@+id/m_eStudentId"
            android:layout_alignTop="@+id/passwd"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:textColorHint="@android:color/white"
            android:layout_toLeftOf="@+id/show"
            android:layout_toStartOf="@+id/show" />

        <ImageButton
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/show"
            android:background="@null"
            android:layout_marginRight="31dp"
            android:layout_marginEnd="31dp"
            android:layout_alignBottom="@+id/m_ePasswd"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignEnd="@+id/m_eStudentId"
            android:layout_alignRight="@+id/m_eStudentId"
            android:layout_below="@+id/m_ePasswd"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"
            android:background="#e8e8e8" />

    </RelativeLayout>

    <Button
        android:id="@+id/login"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:textColor="#33cbcc"
        android:background="@drawable/button_shape"
        android:text="登陆"         />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">


        <Button
            android:id="@+id/forgetPasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:text="忘记密码?"
            />

        <Button
            android:id="@+id/regest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginEnd="43dp"
            android:layout_marginRight="43dp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:text="注册"            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            android:text="使用其他方式登录" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="76dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="76dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv"
            android:background="@android:color/white" />
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:src="@drawable/app_logo"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="41dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:src="@drawable/app_logo"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:src="@drawable/app_logo"
            android:background="@null"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="37dp"            />

    </RelativeLayout>

</LinearLayout>
