<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3dd5da"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/btn_back"
            android:background="@drawable/arrow_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="活动"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_back"
            android:id="@+id/tv_my_name"
            android:layout_alignBottom="@+id/btn_back"
            android:layout_marginLeft="18dp"
            />
    </RelativeLayout>
    <krelve.view.Kanner
        android:id="@+id/kanner"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <zhoushi.ist.controls.ListViewForScrollView
        android:id="@id/swipe_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
            android:id="@+id/swipeToLoadLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@android:color/white" >

            <!--<zhoushi.ist.activity.RefreshHeaderView-->
                <!--android:id="@id/swipe_refresh_header"-->
                <!--android:layout_width="match_parent"-->
                <!--android:gravity="center"-->
                <!--android:layout_height="60dp"-->
                <!--android:background="@android:color/holo_blue_bright"/>-->
            <zhoushi.ist.activity.LoadMoreFooterView
                android:id="@id/swipe_load_more_footer"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="60dp"
                android:background="@android:color/holo_blue_bright"/>

        </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>


</LinearLayout>