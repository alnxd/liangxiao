<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#bee6c9"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btn_back"
                android:background="@drawable/arrow_left"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="成员列表"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn_back"
                android:id="@+id/tv_my_name"
                android:layout_alignBottom="@+id/btn_back"
                android:layout_marginLeft="18dp"
                />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tip_img"
            android:text="头像 "
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#050505" />

        <TextView
            android:id="@+id/tip_name"
            android:text="姓名 "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="18dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tip_img"
            android:layout_toEndOf="@+id/tip_img"
            android:textColor="#050505" />

        <TextView
            android:id="@+id/tip_college"
            android:text="学院年级"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="48dp"
            android:layout_toRightOf="@+id/tip_name"
            android:layout_toEndOf="@+id/tip_name"
            android:textColor="#050505" />

        <TextView
            android:id="@+id/tip_sex"
            android:text="性别 "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_toRightOf="@+id/tip_college"
            android:layout_toEndOf="@+id/tip_college"
            android:textColor="#050505" />
        <TextView
            android:id="@+id/tip_title"
            android:text="职务 "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tip_sex"
            android:layout_toEndOf="@+id/tip_sex"
            android:textColor="#050505" />
     </RelativeLayout>
        <ImageView
            android:background="#f2efef"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <zhoushi.ist.controls.ListViewForScrollView
            android:id="@+id/list_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5" />

  </LinearLayout>
</RelativeLayout>
