<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <zhoushi.ist.controls.RoundImageView
        android:id="@+id/photo_image"
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/app_logo"
        android:layout_gravity="left"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/list_name"
        android:text="篮球社团"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#050000"
        android:typeface="serif"
        android:layout_alignTop="@+id/photo_image"
        android:layout_toRightOf="@+id/photo_image"
        android:layout_toEndOf="@+id/photo_image"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/author"
        android:textSize="11sp"
        android:text="欢迎加入篮球社团欢迎加入篮球社团"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_name"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@+id/list_name"
        android:layout_toRightOf="@+id/photo_image"
        android:layout_toEndOf="@+id/photo_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100位成员"
        android:id="@+id/content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_above="@+id/author"
        android:layout_alignTop="@+id/list_name"
        android:textColor="#0a1b42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建日期2016.10.11"
        android:id="@+id/timestamp"
        android:textColor="@color/gray"
        android:layout_alignLeft="@+id/content"
        android:layout_below="@+id/content" />

</RelativeLayout>